                <td class="is-visible">{{_i}}Visible{{/i}}</td>
              </tr>
              <tr>
                <th><code>.hidden-phone</code></th>
                <td class="is-hidden">{{_i}}Hidden{{/i}}</td>
                <td class="is-visible">{{_i}}Visible{{/i}}</td>
                <td class="is-visible">{{_i}}Visible{{/i}}</td>
              </tr>
              <tr>
